Edit User

<%= form_with model: @user, url: edit_user_path(@user), method: :patch  do |f| %>
    <div>
        <label>First Name</label>
        <%= f.text_field :firstName %>
    </div>
    <div>
        <label>Last Name</label>
        <%= f.text_field :lastName %>
    </div>
    <div>
        <label>Phone Number</label>
        <%= f.text_field :phone %>
    </div>
    <div>
        <label>Age</label>
        <%= f.text_field :age %>
    </div>
    <div>
        <label>Gender</label>
        <%= f.radio_button :gender, "Male" %> Male
        <%= f.radio_button :gender, "Female" %> Female
    </div>
    <div>
        <label>Address</label>
        <%= f.text_field :address %>
    </div>
    <div>
        <label>Salary</label>
        <%= f.text_field :salary %>
    </div>
    <div>
        <label>Occupation</label>
        <%= f.text_field :occupation %>
    </div>
    <div>
        <label>BirthDay</label>
        <%= f.date_field :birthdate %>
    </div>
    <div>
        <label>Country</label>
        <%= f.select :country_id, options_from_collection_for_select(select_country, 'id', 'name', f.object.country_id), { include_blank: "Select Country" } %>
    </div>
    <div>
        <label>Department</label>
        <%= f.select :department_id, options_from_collection_for_select(select_department, 'id', 'name', f.object.department_id), { include_blank: "Select Country" } %>
    </div>
    <div>
        <label>Description</label>
        <%= f.rich_text_area :description %>
    </div>
    <%= f.submit "Submit"%>
    <%= link_to "back", root_path %>
<% end %>